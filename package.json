    "blitz": "0.45.0",
    "framer-motion": "4.1.17",
    "lodash": "4.17.21",
    "node": "12.18.4",
    "prisma": "3.8.0",
    "react": "alpha",
    "react-dom": "alpha",
    "react-hook-form": "7.8.2",
    "react-icons": "4.2.0",
    "zod": "3.1.0"
  },
  "devDependencies": {
    "eslint": "7.30.0",
    "husky": "6.0.0",
